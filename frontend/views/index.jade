doctype html
html
  head
    title= t('Doorbell')
    link(rel='stylesheet', href='style.css')
  body
    .containter-fluid
      .row
      .col-md-12
        .langs
          a(href="/?lng=en") English
          a(href="/?lng=ru") Русский
      .row
        .col-md-6.col-md-offset-3.col-xs-12.col-sm-8.col-sm-offset-2.col-lg-6.col-lg-offset-3
          form(action="/doorbell", method="POST", id="form", name="form", enctype="multipart/form-data")
            fieldset
              label(for="text")= t('Message')
              textarea.form-control(id="text", rows="3", name="text")
            input.btn.btn-lg.btn-block.btn-primary(value="#{t('Call')}", type="submit")
    script(src="/main.js")
